{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "This template is a starting project for typescript version 3.8",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
